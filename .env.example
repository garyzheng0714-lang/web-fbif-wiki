# Core
APP_BASE_URL=http://localhost:3000

# Session / crypto (generate strong random secrets before production)
SESSION_SECRET=change-me-please-change-me-please
TOKEN_ENCRYPTION_KEY=change-me-32-bytes-minimum-change-me

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fbif_wiki?schema=public

# Redis (BullMQ, rate limiting, caching)
REDIS_URL=redis://localhost:6379

# MinIO / S3-compatible object storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=fbif-wiki
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# Feishu (Lark) Open Platform
FEISHU_BASE_URL=https://open.feishu.cn
FEISHU_APP_ID=
FEISHU_APP_SECRET=
FEISHU_OAUTH_REDIRECT_URI=
FEISHU_OAUTH_SCOPE=

# Optional: lock admin logins to a tenant. If empty, the first successful login will be persisted and enforced.
FEISHU_ALLOWED_TENANT_KEY=

# Feishu Events (optional; used for webhook signature + challenge)
FEISHU_VERIFICATION_TOKEN=
FEISHU_ENCRYPT_KEY=
FEISHU_EVENT_SUBSCRIBE_MODE=webhook
FEISHU_LONGCONN_DEBOUNCE_MS=30000
